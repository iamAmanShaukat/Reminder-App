<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Paper Background (Dark Charcoal) -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_surface" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/glass_stroke"/>
        </shape>
    </item>
    
    <!-- Top Header Strip (Subtle highlight) -->
    <item android:top="0dp" android:left="10dp" android:right="12dp" android:bottom="0dp" android:height="24dp">
         <shape android:shape="rectangle">
             <solid android:color="@color/glass_stroke" /> 
             <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" />
         </shape>
    </item>
</layer-list>
