<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.reminder.ui.HomeFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addEditFragment"
            app:destination="@id/addEditFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.example.reminder.ui.AddEditFragment"
        android:label="Add Reminder"
        tools:layout="@layout/fragment_add_edit" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.reminder.ui.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.reminder.ui.calendar.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />
</navigation>
