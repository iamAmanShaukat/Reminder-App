<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to Use"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp" />

        <!-- Creating & Repeating Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creating &amp; Repeating"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customizing Reminders"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the '+' button to create a task. You can set a title, description, and exact time."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/glass_stroke"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeating Tasks"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap 'Does not repeat' to unlock advanced options:"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginTop="8dp"
                 android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Choose Days: Select specific days (e.g., Mon, Wed, Fri)."
                    android:textColor="@color/text_tertiary"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Intervals: Set reminders to repeat every X hours or minutes (e.g., 'Every 2 Hours')."
                    android:textColor="@color/text_tertiary"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Gestures Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestures"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Swipe Right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_tick"
                    app:tint="@color/color_check"
                    android:background="@drawable/bg_button_neu"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe Right to Complete"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark a task as done instantly. To undo, just uncheck it."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Swipe Left -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="@color/color_delete"
                    android:background="@drawable/bg_button_neu"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe Left to Delete"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permanently remove a task. An Undo option appears briefly."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!-- Widgets Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Screen Widget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Always on Display"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add the 'Sticky Note' widget to your home screen to see your top 5 tasks at a glance."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
            
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="• Tap '+' to add a task\n• Tap 'Check' to mark complete"
                 android:textColor="@color/text_tertiary"
                 android:textSize="13sp"
                 android:layout_marginTop="8dp"
                 android:lineSpacingExtra="4dp"/>

             <Button
                android:id="@+id/btnAddWidgetHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Widget Now"
                android:layout_marginTop="16dp"
                style="@style/Widget.Material3.Button.TonalButton"/>
        </LinearLayout>

        <!-- Templates Section -->
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Templates"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="48dp"> <!-- Extra bottom padding -->

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed up your workflow"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_water_glass"
                    app:tint="@color/brand_accent"
                    android:background="@drawable/bg_button_neu"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Tap the Glass icon on the home screen to access templates like 'Drink Water', 'Take Meds', and 'Call Mom'."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
